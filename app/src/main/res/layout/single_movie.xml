<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayoutSingleMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewPoster"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="3dp"
        android:textSize="18sp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/imageViewPoster"
        app:layout_constraintTop_toTopOf="@id/imageViewPoster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutDateAndRating"
        android:text="Single Title"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDateAndRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPoster"
        app:layout_constraintLeft_toRightOf="@id/imageViewPoster"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textViewReleaseDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="ðŸ“… dd-mm-yyyy"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textViewRating"
            />

        <TextView
            android:id="@+id/textViewRating"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="â­ #.##"
            android:textAlignment="textEnd"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/textViewReleaseDate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>